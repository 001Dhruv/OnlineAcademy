<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4sp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="20dp"
        android:padding="20dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="10dp"
        android:layout_margin="8dp"
        android:outlineAmbientShadowColor="@color/primary_button"
        android:outlineSpotShadowColor="@color/primary_button">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8sp">

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="210sp"
            android:src="@drawable/davil"
            android:id="@+id/home_recycler_img"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Here Goes Title "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:maxHeight="40sp"
            android:id="@+id/home_recycler_title"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Here Goes DescriptionHere "
                android:id="@+id/home_recycler_description"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Here Goes progressbar "
                android:id="@+id/home_recycler_progress"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>